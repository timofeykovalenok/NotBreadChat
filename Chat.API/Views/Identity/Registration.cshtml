@page
@{
    Layout = "_UnauthorizedLayout";
}

<div class="page registration-page d-flex justify-content-center align-items-center">
    <form class="form registration-form d-flex flex-column align-items-center px-2 pt-5" id="registration-form"
          method="post" asp-controller="Identity" asp-action="Registration" novalidate>
        <div class="mb-2">
            Регистрация
        </div>

        <input class="mb-2 invalid-409" type="text" name="login" placeholder="Логин" required pattern=".*\S+.*" />
        <input class="mb-2" type="text" name="username" placeholder="Имя пользователя" required pattern=".*\S+.*" />
        <input class="mb-2" type="password" name="password" placeholder="Пароль" required pattern=".*\S+.*" />
        <button type="submit">Зарегистрироваться</button>

        <small class="invalid-feedback"></small>
    </form>

    <a href="/login">Войти</a>
</div>